    public static void sumproduct(int x, int y, int z) {

	System.out.println("x prend la valeur de :");
	int x = Integer.parseInt(System.console ().readLine ());
	
       	System.out.println("y prend la valeur de :");
	int y = Integer.parseInt(System.console ().readLine ());
	
       	System.out.println("z prend la valeur de :");
	int z = Integer.parseInt(System.console ().readLine ());
	
        System.out.println ("Le résultat de la somme de x et y est :");
	System.out.println (x + y); }

        System.out.println ("Le résultat du produit de x et de z :");
	System.out.println (x * z); }

        System.out.println ("Le résultat du produit de y et de z est :");
	System.out.println (y * z); }
	

	

    }
